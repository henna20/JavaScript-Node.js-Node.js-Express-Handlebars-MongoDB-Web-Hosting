<section>
  <div class="container">
    <div class="row " style="width: 180px; height: 40px">
      <a href="/admin/add-product" class="btn btn-success mt-3">Add Product</a>
    </div>
    <table class="table table-striped mt-4">
      <thead>
        <tr>
       
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          
          <td>{{this.Name}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img src="/product-images/{{this._id}}.jpg" style="width:50px; height:50px;" alt=""></td>
          
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
          <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a></td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>